{
    "version": "0.2.0",
    "configurations": [
    {
        "name": "js Launch Chrome against localhost",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:5500/${fileBasename}",
    },
    {
        "name": "php Launch currently open script",
        "type": "php",
        "request": "launch",
        "program": "${file}",
        // "cwd": "${fileDirname}",
    },
    {
        "name": "php Listen for XDebug with PHP Server",
        "type": "php",
        "request": "launch",
        "pathMappings": {
        "localhost:9000": "localhost:3000"
        },
    }
    ]
}